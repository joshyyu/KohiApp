<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/color_dark_reddish_brown"/>
            <stroke
                android:width="4dp"
                android:color="@color/light_brown"/>

            <corners
                android:topLeftRadius="800dp"
                android:topRightRadius="800dp">
            </corners>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="30dp"/>
            <size
                android:width="200dp"
                android:height="80dp"/>
        </shape>
    </item>
</selector>
